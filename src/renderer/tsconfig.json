{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    "strict": false,  // todo: fix
    "noUnusedLocals": false,
    "noUnusedParameters": false,  // Todo: fix
    "strictNullChecks": false,  // todo: fix
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "src/main"
  ],
  "include": ["./static/**/*"]
}